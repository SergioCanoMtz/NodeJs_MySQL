<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center mb-4">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank" class="text-decoration-none">
                            <h3 class="card-title text-uppercase ">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger mb-2"><i class="fas fa-trash-alt"></i> Eliminar url</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary mb-2"><i class="fas fa-pencil-alt"></i> Editar</a>
                    </div>
                </div>
            </div>
        {{else}} 
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>NO HAY LINK GUARDADOS</p>
                    <a href="/links/add" class="text-decoration-none">CREA UNO</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>