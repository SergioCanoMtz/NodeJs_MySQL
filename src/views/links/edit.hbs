<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group mb-3">
                            <input value="{{link.title}}" type="text" class="form-control" name="title" placeholder="Titulo" autofocus >
                        </div>
                        <div class="form-group mb-3">
                            <input value="{{link.url}}" type="url" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group mb-3"> {{!-- mb-3 es un margin bottom; 3px  --}}
                            <textarea name="description"  rows="4"  class="form-control" placeholder="Descripcion">{{link.description}}</textarea>
                        </div>
                        <div class="form-group text-center"> {{!-- text-center podemos centar lo que hay dentro del div --}}
                            <button type="submit" class="btn btn-success btn-block">
                               <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>
</div> 